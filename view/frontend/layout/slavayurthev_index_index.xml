<page layout="empty" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<title>Slava Yurthev Copyright</title>
	</head>
	<body>
		<referenceContainer name="content">
			<block class="SY\Slider\Block\Copyright" name="sy.copyright"/>
		</referenceContainer>
		<referenceBlock name="sy.copyright">
			<block class="Magento\Framework\View\Element\Text" name="sy.copyright.slider">
				<arguments>
					<argument translate="true" name="text" xsi:type="string"><![CDATA[<a href="https://slavayurthev.github.io/magento-2/extensions/slider/">Magento 2 Slider Extension</a>]]></argument>
				</arguments>
			</block>
		</referenceBlock>
	</body>
</page>